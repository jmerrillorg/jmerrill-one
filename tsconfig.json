{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // ✅ Use "react" for JSX inside .ts files (like route.ts)
    "incremental": true,
    "baseUrl": ".", // ✅ Root of project
    "paths": {
      "@/*": [
        "src/*"
      ] // ✅ Clean path alias for all of src
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
, "postcss.config.js"  ],
  "exclude": [
    "node_modules"
  ]
}
